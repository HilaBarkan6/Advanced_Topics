{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build C++",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++20",
          "-Wall",
          "-Wextra",
          "-Werror",
          "-pedantic",
          "-g",
          "main.cpp",
          "src/*.cpp",
          "src/game_objects/*.cpp",
          "-o",
          "main.exe"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"]
      }
    ]
  }